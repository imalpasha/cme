<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context="cs4295.memecreator.WelcomeScreenAcivity$PlaceholderFragment"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:id="@+id/welcome_screen_tutorial"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/transparent_gray"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:visibility="gone" >

        <cs4295.customView.ResizableImageView
            android:id="@+id/welcome_tutorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:src="@drawable/welcome_tutorial" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="vertical" >

        <cs4295.customView.ResizableImageView
            android:id="@+id/welcomeScreenImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="?android:attr/actionBarSize"
            android:src="@drawable/welcome_screen_image3" />

        <ImageView
            android:id="@+id/welcomeScreenSetting"
            android:layout_width="112dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:src="@drawable/welcome_screen_setting" />
    </LinearLayout>

</RelativeLayout>